<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center;">Create a New Vocabulary</h1>
        <div style="width: 30%; margin:25px auto;"> 
            <form action="/voclist" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="voclist[word]" placeholder="word">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="voclist[weight]" placeholder="weight" min="0" step="1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="voclist[enDefinition]" placeholder="English Definition">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="voclist[img]" placeholder="Image url">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            
            <a href="/voclist">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>
